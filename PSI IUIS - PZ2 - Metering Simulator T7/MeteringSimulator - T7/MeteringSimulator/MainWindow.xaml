<Window x:Class="MeteringSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeteringSimulator"
        mc:Ignorable="d"
        Title="Metering Simulator" Height="350" Width="525" Loaded="Window_Loaded" WindowStyle="None">
    <Grid Background="Black">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock Text="Metering Simulator" Foreground="White" FontSize="18" FontFamily="Consolas"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Background="Black">
                    <Button Name="RestartButton" Content="Restart" Foreground="White" Width="100" Background="Black" BorderBrush="White" Click="RestartButton_Click"/>
                    <Button Name="CloseButton" Content="Exit" Foreground="White" Width="100" BorderBrush="White" Background="Black" Click="CloseButton_Click"/>
                </StackPanel>
            </StackPanel>
            <TextBox DockPanel.Dock="Top" x:Name="textBox" TextWrapping="Wrap" Text="" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" CaretBrush="White" Foreground="White"/>
        </DockPanel>
    </Grid>
</Window>
